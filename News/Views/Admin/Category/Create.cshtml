@model News.Models.Category
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title d-inline">
                    <i class="fa fa-fw fa-crosshairs"></i> Create a new category
                </h3>
                <span class="pull-right">
                    <i class="fa fa-fw fa-chevron-up clickable"></i>
                    <i class="fa fa-fw fa-times removepanel"></i>
                </span>
            </div>
            <div class="card-body">
                <form role="form" asp-action="Create" asp-controller="Category" method="post">
                    <div class="form-group row">
                        <label asp-for="Title" class="col-lg-2 col-md-2  col-sm-12 col-12 col-form-label text-lg-right text-md-right text-left">Title</label>
                        <div class="col-lg-10 col-md-10  col-sm-12 col-12 col-sm-12">
                            <input asp-for="Title" class="form-control form-control-lg" id="input-text"
                                   placeholder="...">
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <button type="submit" class="btn btn-labeled btn-success mb-3">
                            <span class="btn-label">
                                <i class="fa fa-check"></i>
                            </span> Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
