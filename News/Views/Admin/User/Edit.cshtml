@model News.Models.User
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title d-inline">
                    <i class="fa fa-fw fa-crosshairs"></i> Update user
                </h3>
                <span class="pull-right">
                    <i class="fa fa-fw fa-chevron-up clickable"></i>
                    <i class="fa fa-fw fa-times removepanel"></i>
                </span>
            </div>
            <div class="card-body">
                <form role="form" asp-action="Edit" asp-controller="User" method="post" enctype="multipart/form-data" asp-antiforgery="true">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Login" class="control-label">Login</label>
                        <input asp-for="Login" class="form-control" id="input-text" value="@Model.Login">
                        <span asp-validation-for="Login" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Name</label>
                        <input asp-for="Name" class="form-control" id="input-text" value="@Model.Name">
                        <span asp-validation-for="Name" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label">Surname</label>
                        <input asp-for="Surname" class="form-control" id="input-text" value="@Model.Surname">
                        <span asp-validation-for="Surname" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Patronymic" class="control-label">Patronymic</label>
                        <input asp-for="Patronymic" class="form-control" id="input-text" value="@Model.Patronymic">
                        <span asp-validation-for="Patronymic" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label">Phone</label>
                        <input asp-for="Phone" class="form-control" id="input-text" value="@Model.Phone">
                        <span asp-validation-for="Phone" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" id="input-text" value="@Model.Email">
                        <span asp-validation-for="Email" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" class="form-control" id="input-text" value="@Model.Password">
                        <span asp-validation-for="Password" style="color:red"></span>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <button type="submit" class="btn btn-labeled btn-success mb-3">
                            <span class="btn-label">
                                <i class="fa fa-check"></i>
                            </span> Update
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>